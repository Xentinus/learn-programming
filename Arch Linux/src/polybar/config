[colors]
background = #2B2E37
foreground = #979FAE

alert = #E06C75
volume-min = #98C379
volume-med = #E5C07B
volume-max = #E06C75

blue = #61AFEF
red = #E06C75
yellow = #E5C07B
green = #98C379
purple = #C678DD

discord = #738adb

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

################################################################################
##################                    BARS                     #################
################################################################################

[bar/hdmi]
monitor = ${env:MONITOR:HDMI-1}
monitor-strict = true
override-redirect = false
bottom = false
fixed-center = true
width = 100%
height = 22
radius = 0.0
dim-value = 1.0

locale = en_GB.UTF-8

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.foreground}

border-size = 0
border-color = ${colors.background}

padding-left = 1
padding-right = 1

module-margin-left = 0
module-margin-right = 0

offset-x = 0
offset-y = 0

font-0 = "Source Sans Pro:style=Regular:pixelsize=11;1"
font-1 = "UbuntuMono Nerd Font:size=12;1"
font-2 = "UbuntuMono Nerd Font:size=17;3"
font-3 = "Font Awesome 5 Free:style=Regular:pixelsize=8;1"
font-4 = "Font Awesome 5 Free:style=Solid:pixelsize=8;1"
font-5 = "Font Awesome 5 Brands:pixelsize=8;1"

modules-left = github arrow1
modules-center =
modules-right = arrow2 networkspeedup networkspeeddown arrow3 cpu arrow4 memory arrow5 pamac-manager arrow6 date

separator =

cursor-click = pointer
cursor-scroll = ns-resize

################################################################################

[bar/dvi]
