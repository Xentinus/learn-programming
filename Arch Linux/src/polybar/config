################################################################################
################                    MODULES                     ################
################################################################################

[module/cpu]
;https://github.com/jaagr/polybar/wiki/Module:-cpu
type = internal/cpu
interval = 1

format-foreground = ${colors.background}
format-background = ${colors.yellow}
format-prefix = "   "
format-prefix-foreground = ${colors.background}

label-font = 1
format = <label>
label = Cpu: %percentage:1%%

################################################################################

[module/memory]
;https://github.com/jaagr/polybar/wiki/Module:-memory
type = internal/memory
interval = 1

label = %percentage_used%%

format = Mem: <label>
format-prefix = "   "
format-prefix-foreground = ${colors.background}
format-foreground = ${colors.background}
format-background = ${colors.green}

################################################################################

[module/networkspeedup]
;https://github.com/jaagr/polybar/wiki/Module:-network
type = internal/network
interface = enp3s0

label-connected = "%upspeed:7%  |  "
format-connected = <label-connected>
format-connected-prefix = "   "
format-connected-prefix-foreground = ${colors.background}
format-connected-foreground = ${colors.background}
format-connected-background = ${colors.red}

[module/networkspeeddown]
;https://github.com/jaagr/polybar/wiki/Module:-network
type = internal/network
interface = enp3s0

label-connected = "%downspeed:7%"
format-connected = <label-connected>
format-connected-prefix = "   "
format-connected-prefix-foreground = ${colors.background}
format-connected-foreground = ${colors.background}
format-connected-background = ${colors.red}

################################################################################

[module/date]
;https://github.com/jaagr/polybar/wiki/Module:-date
type = internal/date
interval = 1

date = "%d-%m-%Y%"
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = "   "
format-prefix-foreground = ${colors.background}
format-foreground = ${colors.background}
format-background = ${colors.blue}
format-padding = 2
label = %date% | %time%

################################################################################

[module/github]
;https://github.com/jaagr/polybar/wiki/Module:-github
type = internal/github
interval = 60
tail = true

token = ${file:~/.config/polybar/github.token}

empty-notifications = true
format-prefix = "   "
format-prefix-foreground = ${colors.background}
format-foreground = ${colors.background}
format-background = ${colors.blue}
format-padding = 2
label = %notifications%

################################################################################

[module/spotify]
;https://github.com/NicholasFeldman/dotfiles/blob/master/polybar/.config/polybar/spotify.sh
type = custom/script
exec = ~/.config/polybar/scripts/spotify.sh
interval = 1

click-left = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
click-right = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

scroll-up = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Play
scroll-down = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Pause

format-foreground = ${colors.background}
format-background = ${colors.green}
format-padding = 2
format-prefix-foreground = ${colors.background}
format-prefix = "   "
label = %output:0:150%

################################################################################

[module/discord]
type = custom/script
exec = echo " Discord "
interval = 100000
click-left = discord &
click-right = killall Discord & killall Discord &
tail = true

format-foreground = ${colors.background}
format-background = ${colors.discord}
format-padding = 1
format-prefix-foreground = ${colors.background}
format-prefix = " ﭮ  "

################################################################################

[module/chromium]
type = custom/script
exec = echo " Chromium "
interval = 100000
click-left = chromium &

format-foreground = ${colors.background}
format-background = ${colors.red}
format-padding = 1
format-prefix-foreground = ${colors.background}
format-prefix = "   "

################################################################################

[module/volume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/scripts/pavolume.sh --listen

click-right = exec pavucontrol
click-left = ~/.config/polybar/scripts/pavolume.sh --togmute

scroll-up = ~/.config/polybar/scripts/pavolume.sh --up
scroll-down = ~/.config/polybar/scripts/pavolume.sh --down

format-foreground = ${colors.background}
format-background = ${colors.yellow}

################################################################################

[module/pamac-manager]
type = custom/script
exec = pamac checkupdates -q | wc -l
interval = 60
label = Upd: %output%
tail = true
format-foreground = ${colors.background}
format-background = ${colors.purple}
format-prefix-foreground = ${colors.background}
click-left = pamac-manager &
format-prefix = "   "

################################################################################
